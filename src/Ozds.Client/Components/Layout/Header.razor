@using MudBlazor
@using Ozds.Client.State
@namespace Ozds.Client.Components.Layout

<UserToolbar MaxWidth="@MaxWidth" Class="@Class" Style="@Style"/>
@if (RepresentativeState?.Representative is not null)
{
  <RepresentativeToolbar MaxWidth="@MaxWidth" Class="@Class" Style="@Style"/>
}

<LocalizationDrawer MaxWidth="@MaxWidth" Class="@Class" Style="@Style"/>
<UserDrawer MaxWidth="@MaxWidth"/>
@if (RepresentativeState?.Representative is not null)
{
  <NavigationDrawer MaxWidth="@MaxWidth" Class="@Class" Style="@Style"/>
}

@code {

  [CascadingParameter]
  private RepresentativeState? RepresentativeState { get; set; }

  [Parameter]
  public MaxWidth MaxWidth { get; set; } = MaxWidth.Large;

  [Parameter]
  public string Style { get; set; } = string.Empty;

  [Parameter]
  public string Class { get; set; } = string.Empty;

}
