@using MudBlazor
@using Ozds.Client.Components.Base
@using Ozds.Client.State

@namespace Ozds.Client.Components.Layout

@inherits OzdsComponentBase

<MudToolBar
  Gutters="false"
  Style="background-color: var(--mud-palette-appbar-background);"
  Class="mud-elevation-4">
  <MudContainer
    Style="height: 100%;"
    MaxWidth="MaxWidth.Large"
    Class="d-flex flex-row">
    <MudHidden Breakpoint="Breakpoint.SmAndDown">
      <MudButton
        Href="@($"/app/{Culture}")"
        Style="margin-left: -8px;"
        Class="d-flex align-center">
        <MudImage
          Src="/logo.svg"
          Alt="Helb"
          Style="height: 40px;" />
      </MudButton>
    </MudHidden>
    <MudHidden Breakpoint="Breakpoint.MdAndUp">
      <MudButton
        Href="@($"/app/{Culture}")"
        Style="margin-left: -12px;"
        Class="d-flex align-center">
        <MudImage
          Src="/favicon.ico"
          Alt="Helb"
          Style="height: 40px;" />
      </MudButton>
    </MudHidden>
    <MudSpacer />
    <div Class="d-flex flex-row justify-end">
      <MudButton
        Variant="Variant.Text"
        Style="color:white"
        OnClick="e => ThemeState.SetDarkMode(!ThemeState.IsDarkMode)"
        Class="d-flex flex-row align-center">
        @if(ThemeState.IsDarkMode)
        {
          <MudIcon Icon="@Icons.Material.Filled.DarkMode" />
        }
        else
        {
          <MudIcon Icon="@Icons.Material.Filled.LightMode" />
        }
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
          <div Class="ml-2">
            <MudText>
              (@Translate(ThemeState.IsDarkMode ? "Dark" : "Light"))
            </MudText>
          </div>
        </MudHidden>
      </MudButton>
      <MudButton
        Variant="Variant.Text"
        Style="color:white"
        OnClick="e => LayoutState.SetLocalizationDrawerOpen(true)"
        Class="d-flex flex-row align-center">
        <MudIcon Icon="@Icons.Material.Filled.Language" />
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
          <div Class="ml-2">
            <MudText>@Culture</MudText>
          </div>
        </MudHidden>
      </MudButton>
      <MudHidden Breakpoint="Breakpoint.MdAndUp">
        <MudButton
          OnClick="e => LayoutState.SetUserDrawerOpen(true)"
          Variant="Variant.Text"
          Class="d-flex flex-row align-center"
          Style="margin-right: -18px; color:white;">
          <MudIcon Icon="@Icons.Material.Filled.Person"/>
        </MudButton>
      </MudHidden>
      <MudHidden Breakpoint="Breakpoint.SmAndDown">
        <MudButton
          OnClick="e => LayoutState.SetUserDrawerOpen(true)"
          Variant="Variant.Text"
          Class="d-flex flex-row align-center"
          Style="margin-right: -8px; color:white;">
          <MudIcon Icon="@Icons.Material.Filled.Person"/>
          <div Class="ml-2 d-flex flex-column align-center">
            <MudText>
              @Translate("Welcome"),
            </MudText>
            <MudText>
              @(UserState?.User.UserName)
            </MudText>
          </div>
        </MudButton>
      </MudHidden>
    </div>
  </MudContainer>
</MudToolBar>

@code {
  [CascadingParameter]
  public LayoutState LayoutState { get; set; } = default!;

  [CascadingParameter]
  public UserState UserState { get; set; } = default!;

  [CascadingParameter]
  public ThemeState ThemeState { get; set; } = default!;
}
