@using MudBlazor
@using Ozds.Business.Analysis
@using Ozds.Business.Models.Abstractions
@using Ozds.Business.Models.Enums
@using Ozds.Business.Time
@using Ozds.Client.Components.Charts
@using Ozds.Client.Components.Base
@using Ozds.Client.State

@namespace Ozds.Client.Components.Dashboards

@inherits OzdsOwningComponentBase

@{
  var analysis = RepresentativeState.AnalysisBases.Analysis();
  var meters = RepresentativeState.AnalysisBases
    .Select(x => (IMeter)x.Meter)
    .ToList();
}

<MudContainer MaxWidth="MaxWidth.Large" Class="my-3">
  <MudGrid>
    <MudItem xs="12">
      <MudPaper Class="pa-3">
        <MeasurementChartControls Meters="@meters">
          <MeasurementLineChart Meters="@meters" Parameters="@context" />
        </MeasurementChartControls>
      </MudPaper>
    </MudItem>
  </MudGrid>
</MudContainer>

@code {
  [CascadingParameter]
  public RepresentativeState RepresentativeState { get; set; } = default!;
}
