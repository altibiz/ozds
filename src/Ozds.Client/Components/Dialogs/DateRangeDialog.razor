@using Microsoft.AspNetCore.Components
@using MudBlazor
@using Ozds.Client.Components.Base

@namespace Ozds.Client.Components.Dialogs

@inherits OzdsComponentBase

<MudDialog>
  <DialogContent>
    <MudStack Spacing="2">
      <MudDatePicker
        Label="@Translate("Start Date")"
        @bind-Date="StartDate"
        DateFormat="dd.MM.yyyy"
        MinDate="MinDate?.DateTime"
        MaxDate="MaxDate?.DateTime"/>
      <MudDatePicker
        Label="@Translate("End Date")"
        @bind-Date="EndDate"
        DateFormat="dd.MM.yyyy"
        MinDate="MinDate?.DateTime"
        MaxDate="MaxDate?.DateTime"/>
    </MudStack>
  </DialogContent>
  <DialogActions>
    <MudButton Color="Color.Primary" OnClick="Submit">
      @Translate("Submit")
    </MudButton>
    <MudButton Color="Color.Secondary" OnClick="Cancel">
      @Translate("Cancel")
    </MudButton>
  </DialogActions>
</MudDialog>
