@namespace Ozds.Client.Components.Dialogs
@using MudBlazor
@inherits Ozds.Client.Components.Base.OzdsComponentBase

<MudDialog OnBackdropClick="OnExit">
  <DialogContent>
    <MudText Typo="Typo.body1" Style="min-width: 200px;">
      @Body
    </MudText>
  </DialogContent>
  <DialogActions>
    <MudButton FullWidth Color="Color.Primary" OnClick="OnExit">
      @Translate("Close")
    </MudButton>
  </DialogActions>
</MudDialog>
