@using Microsoft.AspNetCore.Components
@using MudBlazor
@using Ozds.Client.Components.Base

@namespace Ozds.Client.Components.Streaming

@inherits OzdsComponentBase

<MudDialog OnBackdropClick="OnExit">
  <DialogContent>
    <MudText Typo="Typo.body1" Style="min-width: 200px;">
      @Body
    </MudText>
  </DialogContent>
  <DialogActions>
    <MudButton FullWidth Color="MudBlazor.Color.Primary" OnClick="OnExit">
      @Translate("Close")
    </MudButton>
  </DialogActions>
</MudDialog>
