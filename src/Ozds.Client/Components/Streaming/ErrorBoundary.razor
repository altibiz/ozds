@namespace Ozds.Client.Components.Streaming
@using MudBlazor
@inherits Ozds.Client.Components.Base.OzdsComponentBase

<InnerErrorBoundary This="this" @ref="@inner">
  <ChildContent>
    @ChildContent
  </ChildContent>
  <ErrorContent>
    <Error>
      @context
    </Error>
    <MudButton OnClick="@OnRecover">
      @Translate("Recover")
    </MudButton>
  </ErrorContent>
</InnerErrorBoundary>
