@using Microsoft.AspNetCore.Components
@using MudBlazor
@using Ozds.Business.Models
@using Ozds.Client.Components.Base

@namespace Ozds.Client.Components.Models

@inherits OzdsComponentBase

<MudTextField
  Label="@Translate("Name")"
  @bind-Value="Model.Title"
  For="@(() => Model.Title)"/>
<MudTextField
  T="decimal"
  Label="@Translate("Price of higher tariff active energy consumption (EUR/kWh)")"
  @bind-Value="Model.ActiveEnergyTotalImportT0Price_EUR"
  For="@(() => Model.ActiveEnergyTotalImportT0Price_EUR)"/>
<MudTextField
  T="decimal"
  Label="@Translate("Price of reactive energy consumption in a single tariff (EUR/kVARh)")"
  @bind-Value="Model.ReactiveEnergyTotalRampedT0Price_EUR"
  For="@(() => Model.ReactiveEnergyTotalRampedT0Price_EUR)"/>
<MudTextField
  Label="@Translate("Price of metering fee (EUR)")"
  @bind-Value="Model.MeterFeePrice_EUR"
  For="@(() => Model.MeterFeePrice_EUR)"/>

@code {
  [Parameter]
  public BlueLowNetworkUserCatalogueModel Model { get; set; } = default!;
}
