@using Microsoft.AspNetCore.Components
@using MudBlazor
@using Ozds.Business.Models
@using Ozds.Business.Models.Base
@using Ozds.Client.Components.Base
@using Ozds.Client.Components.Fields
@using Ozds.Client.Components.Streaming

@namespace Ozds.Client.Components.Models

@inherits OzdsComponentBase

<MudTextField
  Label="@Translate("Name")"
  @bind-Value="Model.Title"
  For="@(() => Model.Title)"/>

<MudSelect
  Label="@Translate("Location")"
  AnchorOrigin="Origin.BottomCenter"
  @bind-Value="Model.LocationId"
  For="@(() => Model.LocationId)">
  <Paging T="LocationModel">
    <Summary>
      <MudSelectItem Value="context.Id">
        <LocationSummary Model="context"/>
      </MudSelectItem>
    </Summary>
  </Paging>
</MudSelect>

<MudSelect
  Label="@Translate("Device")"
  AnchorOrigin="Origin.BottomCenter"
  @bind-Value="Model.MeterId"
  For="@(() => Model.MeterId)">
  <Paging T="MeterModel">
    <Summary>
      <MudSelectItem Value="context.Id">
        <MeterSummary Model="context"/>
      </MudSelectItem>
    </Summary>
  </Paging>
</MudSelect>

@code {
  [Parameter]
  public LocationMeasurementLocationModel Model { get; set; } = default!;
}
