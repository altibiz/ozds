@using Microsoft.AspNetCore.Components
@using Ozds.Business.Models.Abstractions
@using Ozds.Business.Models
@using Ozds.Client.Components.Base
@using Ozds.Client.Components.Fields

@namespace Ozds.Client.Components.Models

@inherits OzdsComponentBase

@if (Model is MessengerNotificationModel messengerNotificationModel)
{
  <MessengerNotificationSummary Model="messengerNotificationModel"/>
}
else if (Model is SystemNotificationModel systemNotificationModel)
{
  <SystemNotificationSummary Model="systemNotificationModel"/>
}

@code {
  [Parameter]
  public INotification Model { get; set; } = default!;
}
