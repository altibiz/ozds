<PropertyColumn
  T="ICalculation"
  TProperty="string"
  Property="x => x.Title"
  Title='@Translate("Title")'>
  <CellTemplate>
    <MudText>@context.Item.Title</MudText>
  </CellTemplate>
</PropertyColumn>

<PropertyColumn
  T="ICalculation"
  TProperty="DateTimeOffset"
  Property="x => x.FromDate"
  Title='@Translate("From Date")'>
  <CellTemplate>
    <MudText>@DateTimeString(context.Item.FromDate)</MudText>
  </CellTemplate>
</PropertyColumn>

<PropertyColumn
  T="ICalculation"
  TProperty="DateTimeOffset"
  Property="x => x.ToDate"
  Title='@Translate("To Date")'>
  <CellTemplate>
    <MudText>@DateTimeString(context.Item.ToDate)</MudText>
  </CellTemplate>
</PropertyColumn>

<PropertyColumn
