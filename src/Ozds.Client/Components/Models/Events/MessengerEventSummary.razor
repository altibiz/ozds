@using Microsoft.AspNetCore.Components
@using MudBlazor
@using Ozds.Business.Models
@using Ozds.Business.Models.Base
@using Ozds.Client.Components.Base

@namespace Ozds.Client.Components.Models

@inherits OzdsComponentBase

<MudText Typo="Typo.h6">
  @Model.Title
</MudText>
<MudText>
  @Translate("Messenger ID:")
  &nbsp;
  @Model.MessengerId
</MudText>
<MudText>
  @Translate("Timestamp:")
  &nbsp;
  @DateTimeString(Model.Timestamp)
</MudText>

@code {
  [Parameter]
  public MessengerEventModel Model { get; set; } = default!;
}
