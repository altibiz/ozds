@using Microsoft.AspNetCore.Components
@using MudBlazor
@using Ozds.Business.Models
@using Ozds.Client.Components.Base
@using Ozds.Client.Components.Fields

@namespace Ozds.Client.Components.Models

@inherits OzdsComponentBase

<MudTextField
  Label="@Translate("Name")"
  @bind-Value="Model.Title"
  For="@(() => Model.Title)"/>
<MudTextField
  Label="@Translate("Min voltage")"
  @bind-Value="Model.MinVoltage_V"
  For="@(() => Model.MinVoltage_V)"/>
<MudTextField
  Label="@Translate("Max voltage")"
  @bind-Value="Model.MaxVoltage_V"
  For="@(() => Model.MaxVoltage_V)"/>
<MudTextField
  Label="@Translate("Min current")"
  @bind-Value="Model.MinCurrent_A"
  For="@(() => Model.MinCurrent_A)"/>
<MudTextField
  Label="@Translate("Max current")"
  @bind-Value="Model.MaxCurrent_A"
  For="@(() => Model.MaxCurrent_A)"/>
<MudTextField
  Label="@Translate("Min active power")"
  @bind-Value="Model.MinActivePower_W"
  For="@(() => Model.MinActivePower_W)"/>
<MudTextField
  Label="@Translate("Max active power")"
  @bind-Value="Model.MaxActivePower_W"
  For="@(() => Model.MaxActivePower_W)"/>
<MudTextField
  Label="@Translate("Min reactive power")"
  @bind-Value="Model.MinReactivePower_VAR"
  For="@(() => Model.MinReactivePower_VAR)"/>
<MudTextField
  Label="@Translate("Max reactive power")"
  @bind-Value="Model.MaxReactivePower_VAR"
  For="@(() => Model.MaxReactivePower_VAR)"/>

@code {
  [Parameter]
  public AbbB2xMeasurementValidatorModel Model { get; set; } = default!;
}
