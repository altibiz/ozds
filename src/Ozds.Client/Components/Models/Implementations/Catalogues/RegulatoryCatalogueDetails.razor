</DetailsField>
<DetailsField Title="@Translate("Price of active energy consumption in low tariff (EUR/kWh)")">
  @Model.ActiveEnergyTotalImportT2Price_EUR
</DetailsField>
<DetailsField Title="@Translate("Price of personal use fee (EUR/kWh)")">
  @Model.RenewableEnergyFeePrice_EUR
</DetailsField>
<DetailsField Title="@Translate("Price of business use fee (EUR/kWh)")">
  @Model.BusinessUsageFeePrice_EUR
</DetailsField>
<DetailsField Title="@Translate("Tax (%)")">
  @Model.TaxRate_Percent
</DetailsField>


