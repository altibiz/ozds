@using Microsoft.AspNetCore.Components
@using MudBlazor
@using Ozds.Business.Models
@using Ozds.Business.Models.Abstractions

@namespace Ozds.Client.Components.Models

@if (Model
  is AbbB2xMeasurementValidatorModel abbB2XMeasurementValidatorModel) {
  <AbbB2xMeasurementValidatorSummary Model="abbB2XMeasurementValidatorModel"/>
}
else if (Model
  is SchneideriEM3xxxMeasurementValidatorModel
    schneideriEM3XxxMeasurementValidatorModel) {
  <SchneideriEM3xxxMeasurementValidatorSummary
    Model="schneideriEM3XxxMeasurementValidatorModel"/>
}
else {
  throw new ArgumentOutOfRangeException(nameof(Model));
}

@code {
  [Parameter]
  public IMeasurementValidator Model { get; set; } = default!;
}
