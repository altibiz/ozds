@namespace Ozds.Client.Components.Models.Implementations.Analyses

@using Ozds.Business.Models.Enums
@using Ozds.Client.State
@inherits Ozds.Client.Components.Models.Base.OzdsDetailsComponentBase<Ozds.Business.Analysis.LocationAnalysis>

@Field(x => x.Location.Title)

@Field(x => x.Analysis.LastMonthConsumption.ActiveEnergy_kWh)

@Field(x => x.Analysis.ThisMonthConsumption.ActiveEnergy_kWh)

@if (RepresentativeState.Representative.Role
  is RoleModel.LocationRepresentative)
{
  @Field(x => x.Analysis.Load.ActivePower_kW)
}
else
{
  @Field(x => x.Analysis.LastMonthExpenses.Total_EUR)
}

@code {

  [CascadingParameter]
  public RepresentativeState RepresentativeState { get; set; } = default!;

}
