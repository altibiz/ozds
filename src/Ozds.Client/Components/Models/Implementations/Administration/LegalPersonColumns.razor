@using MudBlazor
@using Ozds.Business.Models.Complex
@using Ozds.Client.Components.Models.Base

@namespace Ozds.Client.Components.Models.Implementations.Administration

@typeparam TPrefix
@typeparam TModel where TModel : LegalPersonModel
@inherits OzdsColumnsComponentBase<TPrefix, TModel>

<PropertyColumn
  T="TPrefix"
  TProperty="string"
  Property="@(x => Fix(x)!.Name)"
  Title='@Translate("Legal name")'>
  <CellTemplate>
    <MudText>
      @(Fix(context.Item)?.Name)
    </MudText>
  </CellTemplate>
</PropertyColumn>

<PropertyColumn
  T="TPrefix"
  TProperty="string"
  Property="@(x => Fix(x)!.SocialSecurityNumber)"
  Title='@Translate("Social security number")'>
  <CellTemplate>
    <MudText>
      @(Fix(context.Item)?.SocialSecurityNumber)
    </MudText>
  </CellTemplate>
</PropertyColumn>
