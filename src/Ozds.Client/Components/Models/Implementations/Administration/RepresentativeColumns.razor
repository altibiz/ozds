@using MudBlazor
@using Ozds.Business.Models
@using Ozds.Business.Models.Abstractions
@using Ozds.Business.Models.Enums
@using Ozds.Client.Components.Models.Base

@namespace Ozds.Client.Components.Models.Implementations.Administration

@typeparam TPrefix
@typeparam TModel where TModel : RepresentativeModel
@inherits OzdsColumnsComponentBase<TPrefix, TModel>

@(Base<IIdentifiable>())

<PrefixedColumns Models="@Models" Prefix="@(x => Fix(x)?.PhysicalPerson)" />

<PropertyColumn
  T="TPrefix"
  TProperty="RoleModel"
  Property="@(x => Fix(x)!.Role)"
  Title='@Translate("Role")'>
  <CellTemplate>
    <MudText>
      @(Fix(context.Item)?.Role.ToTitle())
    </MudText>
  </CellTemplate>
</PropertyColumn>
