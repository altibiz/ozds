@using MudBlazor
@using Ozds.Business.Models
@using Ozds.Business.Models.Abstractions
@using Ozds.Client.Components.Models.Base

@namespace Ozds.Client.Components.Models.Implementations.Administration

@typeparam TPrefix
@typeparam TModel where TModel : NetworkUserModel
@inherits OzdsColumnsComponentBase<TPrefix, TModel>

@(Base<IIdentifiable>())

<PrefixedColumns Models="@Models" Prefix="@(x => Fix(x).LegalPerson)" />

<PropertyColumn
  T="TPrefix"
  TProperty="string"
  Property="@(x => Fix(x).AltiBizSubProjectCode)"
  Title='@Translate("AltiBiz subproject code")'>
  <CellTemplate>
    <MudText>
      @(Fix(context.Item).AltiBizSubProjectCode)
    </MudText>
  </CellTemplate>
</PropertyColumn>
