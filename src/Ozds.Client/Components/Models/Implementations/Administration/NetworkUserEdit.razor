@using Microsoft.AspNetCore.Components
@using MudBlazor
@using Ozds.Business.Models
@using Ozds.Business.Models.Abstractions
@using Ozds.Client.Components.Models.Base
@using Ozds.Client.Components.Fields
@using Ozds.Client.Components.Streaming

@namespace Ozds.Client.Components.Models

@inherits OzdsDetailsComponentBase<NetworkUserModel>

@(Base<IIdentifiable>())

<Edit Model="@(Model.LegalPerson)" />

<MudTextField
  Label="@Translate("AltiBiz subproject code")"
  @bind-Value="Model.AltiBizSubProjectCode"
  For="@(() => Model.AltiBizSubProjectCode)"/>

<MudSelect
  Label="@Translate("Location")"
  @bind-Value="Model.LocationId"
  For="@(() => Model.LocationId)">
  <Paging T="LocationModel">
    <Summary>
      <MudSelectItem Value="context.Id">
        <Summary Model="context"/>
      </MudSelectItem>
    </Summary>
  </Paging>
</MudSelect>
