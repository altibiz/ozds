@using Microsoft.AspNetCore.Components
@using MudBlazor
@using Ozds.Business.Models
@using Ozds.Business.Models.Abstractions
@using Ozds.Client.Components.Models.Base
@using Ozds.Client.Components.Fields
@using Ozds.Client.Components.Streaming

@namespace Ozds.Client.Components.Models

@typeparam TPrefix
@typeparam TModel where TModel : NetworkUserModel
@inherits OzdsEditComponentBase<TPrefix, TModel>

@(Base<IIdentifiable>())

<Edit Model="@Get(x => x.LegalPerson)" />

@Field(x => x.AltiBizSubProjectCode)

<MudSelect
  Label="@Translate("Location")"
  Value="@Get(x => x.LocationId)"
  ValueChanged="@Set(x => x.LocationId)"
  For="@For(x => x.LocationId)">
  <Paging T="LocationModel">
    <Summary>
      <MudSelectItem Value="context.Id">
        <Summary Model="context"/>
      </MudSelectItem>
    </Summary>
  </Paging>
</MudSelect>
