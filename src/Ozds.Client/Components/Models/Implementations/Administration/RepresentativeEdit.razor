@using Microsoft.AspNetCore.Components
@using MudBlazor
@using Ozds.Business.Models
@using Ozds.Business.Models.Abstractions
@using Ozds.Business.Models.Enums
@using Ozds.Client.Components.Models.Base
@using Ozds.Client.Components.Fields
@using Ozds.Client.Components.Streaming

@namespace Ozds.Client.Components.Models.Implementations.Administration

@inherits OzdsEditComponentBase<RepresentativeModel>

@(Base<IIdentifiable>())

<EnumPicker
  Label="@(_ => Translate("Role"))"
  @bind-Value="@Model.Role" />

<Edit Model="@(Model.PhysicalPerson)" />

<MultiEnumPicker
  T="TopicModel"
  Label="@(_ => Translate("Topics"))"
  Value="@Model.Topics.ToHashSet()"
  ValueChanged="@(topics => Model.Topics = topics.ToList())" />
