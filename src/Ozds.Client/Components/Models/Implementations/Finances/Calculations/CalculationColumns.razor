@using MudBlazor
@using Ozds.Business.Models.Abstractions
@using Ozds.Client.Components.Models.Base

@typeparam TPrefix
@typeparam TModel where TModel : ICalculation
@inherits OzdsColumnsComponentBase<TPrefix, TModel>

<PropertyColumn
  T="TPrefix"
  TProperty="string"
  Property="x => Raw(x)!.Title"
  Title='@Translate("Title")'>
  <CellTemplate>
    <MudText>@Raw(context.Item)?.Title</MudText>
  </CellTemplate>
</PropertyColumn>

<PropertyColumn
  T="TPrefix"
  TProperty="DateTimeOffset"
  Property="x => Raw(x)!.FromDate"
  Title='@Translate("From Date")'>
  <CellTemplate>
    <MudText>@DateTimeString(Raw(context.Item)?.FromDate)</MudText>
  </CellTemplate>
</PropertyColumn>

<PropertyColumn
  T="TPrefix"
  TProperty="DateTimeOffset"
  Property="x => Raw(x)!.ToDate"
  Title='@Translate("To Date")'>
  <CellTemplate>
    <MudText>@DateTimeString(Raw(context.Item)?.ToDate)</MudText>
  </CellTemplate>
</PropertyColumn>

<PropertyColumn
  T="TPrefix"
