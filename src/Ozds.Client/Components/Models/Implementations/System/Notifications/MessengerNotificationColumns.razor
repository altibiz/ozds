@using MudBlazor
@using Ozds.Business.Models
@using Ozds.Business.Models.Enums
@using Ozds.Client.Components.Models.Base
@using Ozds.Client.State

@namespace Ozds.Client.Components.Models

@typeparam TPrefix
@typeparam TModel where TModel : MessengerNotificationModel
@inherits OzdsColumnsComponentBase<TPrefix, TModel>

<PropertyColumn
  T="TPrefix"
  TProperty="DateTimeOffset"
  Property="x => Fix(x)!.Timestamp"
  Title='@Translate("Date")'>
  <CellTemplate>
    @(Fix(context.Item)?.Timestamp.ToString("HH:mm dd.MM.yyyy."))
  </CellTemplate>
</PropertyColumn>
