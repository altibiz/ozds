<DetailsField Title="@T["User Name"]">
  @Model.User.UserName
</DetailsField>

<DetailsField Title="@T["User Email"]">
  @Model.User.Email
</DetailsField>

@if (Model.Representative is { } representative)
{
  <DetailsField Title="@T["Title"]">
    @representative.Title
  </DetailsField>

  <DetailsField Title="@T["Name"]">
    @representative.PhysicalPerson.Name
  </DetailsField>

  <DetailsField Title="@T["Email"]">
    @representative.PhysicalPerson.Email
  </DetailsField>

  <DetailsField Title="@T["PhoneNumber"]">
    @representative.PhysicalPerson.PhoneNumber
  </DetailsField>
}

@code {
  [Parameter]
  public MaybeRepresentingUserModel Model { get; set; } = default!;
}
