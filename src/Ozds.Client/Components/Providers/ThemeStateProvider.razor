@namespace Ozds.Client.Components.Providers
@using MudBlazor
@inherits Ozds.Client.Components.Base.OzdsComponentBase

@if (_state is null)
{
  return;
}

<CascadingValue Value="_state">
  <MudThemeProvider
    @ref="_mudThemeProvider"
    Theme="_state.Theme"
    IsDarkMode="_state.IsDarkMode"/>
  <MudPopoverProvider/>
  <MudDialogProvider/>
  <MudSnackbarProvider/>

  <MudBreakpointProvider>
    @ChildContent
  </MudBreakpointProvider>
</CascadingValue>
