@using Microsoft.AspNetCore.Components.Web
@using Microsoft.Extensions.DependencyInjection
@using Ozds.Business.Models.Base
@using Ozds.Business.Queries
@using Ozds.Client.Components.Layout
@using Ozds.Client.Components.Print
@using Ozds.Client.Components.Streaming
@using Ozds.Client.Components.Base

@namespace Ozds.Client.Pages

@layout PrintLayout

@page "/print/calculation/{id}"

@inherits OzdsComponentBase

<Loading T="NetworkUserCalculationModel">
  <Found>
    <HeadContent>
      <title>OZDS - @Translate("Calculation print"): @context.Title</title>
    </HeadContent>

    <NetworkUserCalculationPrint Model="@context"/>
  </Found>
  <NotFound>
    <HeadContent>
      <title>OZDS - @Translate("Calculation print")</title>
    </HeadContent>

    <NotFound />
  </NotFound>
</Loading>

@code {
  [Parameter]
  public required string Id { get; set; }
}
