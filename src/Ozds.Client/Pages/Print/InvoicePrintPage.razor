@using Microsoft.Extensions.DependencyInjection
@using Ozds.Business.Queries
@using Ozds.Client.Components.Print
@using Ozds.Client.Components.Streaming
@using Ozds.Client.Components.Base

@namespace Ozds.Client.Pages

@layout PrintLayout

@page "/print/invoice/{id}"

@inherits OzdsOwningComponentBase

<Loading LoadAsync="@(() => ScopedServices
  .GetRequiredService<CalculatedInvoiceQueries>()
  .ReadCalculatedNetworkUserInvoice(Id, CancellationToken.None))">
  <Found>
    <NetworkUserInvoicePrint Model="@context"/>
  </Found>
</Loading>

@code {
  [Parameter]
  public string Id { get; set; } = default!;
}
