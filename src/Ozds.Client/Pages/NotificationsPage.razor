@page "/notifications"
@attribute [Navigation(Icon= Icons.Material.Outlined.Notifications, Title = "Notifications")]


@if (user is null)
{
  return;
}

<MudCheckBox
  T="bool"
  Label="@T["Seen"]"
  Checked="@UserLayoutState.Seen"
  CheckedChanged="@(() => UserLayoutState
    .SetSeen(!UserLayoutState.Seen))"/>

<NotificationsTable Seen="@UserLayoutState.Seen"/>


@code {

  [CascadingParameter]
  public UserState user { get; set; } = default!;

  [CascadingParameter]
  public RepresentativeState RepresentativeState { get; set; } = default!;

  [CascadingParameter]
  public UserLayoutState UserLayoutState { get; set; } = default!;
}
