@namespace Ozds.Client.Pages

@page "/measurements/measurement-export"

@attribute [Navigation(
Order = 100,
Title = "Measurement export",
Icon = Icons.Material.Filled.VerifiedUser,
Parent = typeof(MeasurementsPage),
Allows = [
RoleModel.OperatorRepresentative,
RoleModel.LocationRepresentative,
RoleModel.NetworkUserRepresentative
])]
@using Microsoft.AspNetCore.Components.Web
@using MudBlazor
@using Ozds.Business.Analysis
@using Ozds.Business.Models.Abstractions
@using Ozds.Client.Attributes
@using Ozds.Client.Components.Fields
@using Ozds.Client.Components.Streaming
@using Ozds.Client.Records
@using Ozds.Client.State
@inherits Ozds.Client.Components.Base.OzdsComponentBase

<HeadContent>
  <title>OZDS - @Translate("Measurement export")</title>
</HeadContent>

@{
  var analyses = AnalysisState.AnalysisBases.Value
    .AnalysesByMeasurementLocation();
  var meters = AnalysisState.AnalysisBases.Value
    .Select(analysis => (IMeter)analysis.Meter)
    .DistinctBy(meter => meter.Id)
    .ToList();
}

<MudGrid>
  <MudItem xs="12">
    <MudPaper Class="pa-3">
      <MeasurementExportField MeasurementLocations="@(analyses.Select(x => (IMeasurementLocation)x.MeasurementLocation).ToList())" Meters="@meters">
        <DownloadField Models="@context" ></DownloadField>
      </MeasurementExportField>
    </MudPaper>
  </MudItem>
</MudGrid>

@if (RepresentativeState.Representative.Role
  == RoleModel.OperatorRepresentative)
{
  <MudCheckBox
    Label="@Translate("Deleted")"
    @bind-Value="_deleted"/>
}

@code {

  [CascadingParameter]
  public AnalysisState AnalysisState { get; set; } = default!;

  [CascadingParameter]
  private RepresentativeState RepresentativeState { get; set; } = default!;

  private bool _deleted;
}
