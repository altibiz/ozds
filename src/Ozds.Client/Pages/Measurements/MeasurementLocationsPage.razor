@using Microsoft.AspNetCore.Components.Web
@using MudBlazor
@using Ozds.Business.Analysis
@using Ozds.Business.Models.Enums
@using Ozds.Client.Attributes
@using Ozds.Client.Components.Tables
@using Ozds.Client.Components.Models
@using Ozds.Client.State

@namespace Ozds.Client.Pages

@page "/measurements/measurement-locations"

@attribute [Navigation(
  Order = 0,
  Title = "Measurement locations",
  Icon = Icons.Material.Filled.VerifiedUser,
  Parent = typeof(MeasurementsPage))]

<HeadContent>
  <title>OZDS - @Translate("Measurement locations")</title>
</HeadContent>

@{
  var analyses = RepresentativeState.AnalysisBases
    .AnalysesByMeasurementLocation();
}

<ResponsiveTable Model="@analyses">
  <Summary>
    <MeasurementLocationAnalysisSummary Model="@context" />
  </Summary>
  <Details>
    <MeasurementLocationAnalysisDetails Model="@context" />
  </Details>
  <Columns>
    <MeasurementLocationAnalysisColumns />
  </Columns>
</ResponsiveTable>

@code {
  [CascadingParameter]
  public RepresentativeState RepresentativeState { get; set; } = default!;
}
