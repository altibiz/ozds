@page "/representatives"
@attribute [Navigation(Title = "Representatives")]
@attribute [Authorize]
@inherits OwningComponentBase<Ozds.Business.Queries.OzdsAuditableQueries>

<Loading Load="@(() => Service.MaybeRepresentingUsers(pageNumber: _page))">
  <Found>
    @foreach (var maybeRepresentingUser in context.Items)
    {
      <MudCard>
        <MudCardContent>
          <MudText Typo="Typo.h6">
            @maybeRepresentingUser.User.UserName
          </MudText>
          <MudText>
            @maybeRepresentingUser.User.Email
          </MudText>
        </MudCardContent>
      </MudCard>
    }

    <MudPagination
      class="mt-4"
      @bind-Selected="_page"
      PageSize="QueryConstants.DefaultPageSize"
      TotalItems="context.TotalCount"/>
  </Found>
</Loading>

@code {
  private int _page = 1;
}
