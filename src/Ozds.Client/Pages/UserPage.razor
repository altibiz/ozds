@page "/user/{id}"
@using Ozds.Client.Components.Models
@attribute [Navigation(RouteValue = "id", Parents = new[] { typeof(UsersPage) })]
@inherits OzdsOwningComponentBase

<Mutating>

</Mutating>
<Loading LoadAsync="@(() => ScopedServices
  .GetRequiredService<RepresentativeQueries>()
  .MaybeRepresentingUserByUserId(Id, CancellationToken.None))">
  <Found>
    <MaybeRepresentingUserDetails Model="@context"/>
  </Found>
</Loading>

@code {
  [Parameter]
  public string? Id { get; set; }
}
