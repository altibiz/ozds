@using Microsoft.AspNetCore.Components.Web
@using Ozds.Business.Models.Abstractions
@using Ozds.Client.Components.Streaming
@using Ozds.Client.Components.Models
@using Ozds.Client.Components.Models.Base

@namespace Ozds.Client.Pages

@page "/finances/regulatory-catalogue/{id?}"

@inherits OzdsIdentifiableModelPageComponentBase<IRegulatoryCatalogue>

<Mutating T="IRegulatoryCatalogue" Id="@Id">
  <Edit>
    <HeadContent>
      @if (context.Created)
      {
        <title>OZDS - @Translate("New catalogue")</title>
      }
      else
      {
        <title>OZDS - @Translate("Catalogue"): @context.Model.Title</title>
      }
    </HeadContent>

    <CatalogueEdit Model="@context.Model" />
  </Edit>
  <Details>
    <HeadContent>
      <title>OZDS - @Translate("Catalogue"): @context.Model.Title</title>
    </HeadContent>

    <CatalogueDetails Model="@context.Model" />
  </Details>
</Mutating>

@code {
  [Parameter]
  public string? Id { get; set; } = default!;
}
