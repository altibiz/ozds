@namespace Ozds.Client.Pages

@page "/finances/network-user-invoice/{id?}"
@using Microsoft.AspNetCore.Components.Web
@using Ozds.Business.Models.Abstractions
@using Ozds.Client.Components.Models
@using Ozds.Client.Components.Streaming
@inherits Ozds.Client.Components.Models.Base.OzdsIdentifiableModelPageComponentBase<Ozds.Business.Models.Abstractions.INetworkUserInvoice>

<Mutating T="INetworkUserInvoice" Id="@Id">
  <Edit>
    @if (context.Created)
    {
      <NotFound/>
      return;
    }

    <HeadContent>
      <title>OZDS - @Translate("Invoice"): @context.Model.Title</title>
    </HeadContent>

    <Edit Model="@context.Model"/>
  </Edit>
  <Details>
    <HeadContent>
      <title>OZDS - @Translate("Invoice"): @context.Model.Title</title>
    </HeadContent>

    <Details Model="@context.Model"/>
  </Details>
</Mutating>

@code {

  [Parameter]
  public string Id { get; set; } = default!;

}
