@using Microsoft.AspNetCore.Components.Web
@using MudBlazor
@using Ozds.Business.Models.Abstractions
@using Ozds.Business.Models.Enums
@using Ozds.Client.Attributes
@using Ozds.Client.Components.Base
@using Ozds.Client.Components.Tables
@using Ozds.Client.Components.Models
@using Ozds.Client.State

@namespace Ozds.Client.Pages

@page "/finances/invoices"

@attribute [Navigation(
  Order = 0,
  Title = "Invoices",
  Icon = Icons.Material.Filled.VerifiedUser,
  Parent = typeof(FinancesPage),
  Allows = [
    RoleModel.OperatorRepresentative,
    RoleModel.LocationRepresentative,
    RoleModel.NetworkUserRepresentative
  ])]

@inherits OzdsComponentBase

<HeadContent>
  <title>OZDS - @Translate("Invoices")</title>
</HeadContent>

@{
  var invoices = AnalysisState.AnalysisBases.Value
    .SelectMany(analysisBasis => analysisBasis.Invoices)
    .OfType<IInvoice>()
    .ToList();
}

<ResponsiveTable
  Model="@invoices"
  Link="@(x => PageHref<InvoicePage>(new { x.Id }))">
  <Summary>
    <InvoiceSummary Model="@context" />
  </Summary>
  <Details>
    <InvoiceDetails Model="@context" />
  </Details>
  <Columns>
    <InvoiceColumns />
  </Columns>
</ResponsiveTable>

@code {
  [CascadingParameter]
  public AnalysisState AnalysisState { get; set; } = default!;
}
