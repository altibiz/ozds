@using Microsoft.AspNetCore.Components.Web
@using Ozds.Business.Models.Abstractions
@using Ozds.Client.Components.Base
@using Ozds.Client.Components.Streaming
@using Ozds.Client.Components.Models

@namespace Ozds.Client.Pages

@page "/finances/calculation/{id}"

@inherits OzdsComponentBase

<Mutating T="ICalculation" Id="@Id">
  <Edit>
    @if (context.Created)
    {
      <NotFound />
      return;
    }

    <HeadContent>
      <title>OZDS - @Translate("Calculation"): @context.Model.Title</title>
    </HeadContent>

    <CalculationEdit Model="@context.Model" />
  </Edit>
  <Details>
    <HeadContent>
      <title>OZDS - @Translate("Calculation"): @context.Model.Title</title>
    </HeadContent>

    <CalculationDetails Model="@context.Model" />
  </Details>
</Mutating>

@code {
  [Parameter]
  public string Id { get; set; } = default!;
}
