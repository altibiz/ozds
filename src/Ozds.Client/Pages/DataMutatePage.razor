@page "/data/{type}/{id}"
@attribute [StreamRendering]

@switch (Type)
{
  case "lokacije":
    <LocationMutate Id="@Id"/>
    break;
  case "korisnici-mreže":
    <NetUserMutate Id="@Id"/>
    break;
  case "crveni-niski-katalozi":
    <RedLowNetworkUserCatalogueMutate Id="@Id"/>
    break;
  case "plavi-niski-katalozi":
    <BlueLowNetworkUserCatalogueMutate Id="@Id"/>
    break;
  case "bijeli-niski-katalozi":
    <WhiteLowNetworkUserCatalogueMutate Id="@Id"/>
    break;
  case "bijeli-srednji-katalozi":
    <WhiteMediumNetworkUserCatalogueMutate Id="@Id"/>
    break;
  case "regulaciski-katalozi":
    <RegulatoryCatalogueMutate Id="@Id"/>
    break;
  case "pošiljatenji":
    <MessengerMutate Id="@Id"/>
    break;
  case "abb-b2x-validacija":
    <AbbB2xMeasurementValidatorMutate Id="@Id"/>
    break;
  case "schneider-iem3xxx-validacija":
    <SchneideriEM3xxxMeasurementValidatorMutate Id="@Id"/>
    break;
  case "abb-b2x-brojilo":
    <AbbB2xMeterMutate Id="@Id"/>
    break;
  case "schneider-iem3xxx-brojilo":
    <SchneideriEM3xxxMeterMutate Id="@Id"/>
    break;
  case "brojilo-u-lokaciji":
    <LocationMeasurementLocationMutate Id="@Id"/>
    break;
  case "brojilo-u-korisniku-mreže":
    <NetworkUserMeasurementLocationMutate Id="@Id"/>
    break;
}

@code {
  [Parameter] public string? Type { get; set; } = "";
  [Parameter] public string? Id { get; set; } = "-1";
}
