@page "/representative/{id}"
@attribute [Navigation(RouteValue = "id", Parents = new[] { typeof(RepresentativesPage) })]
@attribute [Authorize]
@attribute [StreamRendering]
@inherits OwningComponentBase<OzdsRepresentativeQueries>

<Loading
  Load="@(async () => (await Service.RepresentingUserByRepresentativeId(Id))!)">
  <Found>
    @context
  </Found>
</Loading>

@code {
  [CascadingParameter] public UserState user { get; set; } = default!;

  [CascadingParameter] public RepresentativeState representative { get; set; } = default!;

  [Parameter] public string Id { get; set; } = default!;
}
