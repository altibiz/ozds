@using Microsoft.Extensions.DependencyInjection
@using Ozds.Business.Models.Base
@using Ozds.Business.Queries.Agnostic
@using Ozds.Client.Components.Base
@using Ozds.Client.Components.Models
@using Ozds.Client.Components.Streaming
@using Ozds.Client.Extensions

@page "/event/{id}"

@inherits OzdsOwningComponentBase

<Loading
  T="EventModel"
  Id="@Id"
  LoadAsync="@(() => ScopedServices
    .GetRequiredService<ReadonlyQueries>()
    .ReadSingle<EventModel>(Id, CancellationToken.None))">
  <Found>
    <EventDetails Model="context"/>
  </Found>
</Loading>

@code {
  [Parameter]
  public string Id { get; set; } = default!;
}
