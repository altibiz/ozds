@inherits OzdsOwningComponentBase

<Loading Load="@(async () => (Model ?? await ScopedServices.GetRequiredService<OzdsNetworkUserQueries>().NetworkUserById(Id))!)">
  <Found>
    <MudContainer MaxWidth="MaxWidth.ExtraSmall" Class="d-flex  flex-column" Style="float: left;">
      <MudText Class="d-flex align-center my-2" Typo="@Typo.h5">Korisnik mre≈æe</MudText>
      <MudPaper class="mt-2 px-4 py-2">
        <MudGrid Spacing="3">
          <MudItem xs="12" sm="6">
            <MudText Typo="Typo.body1" Style="font-weight: bold;">
              @T["Title"]:
            </MudText>
          </MudItem>
          <MudItem xs="12" sm="6">
            <MudHidden Breakpoint="Breakpoint.Xs">
              <MudText Type="Typo.body2" Align="MudAlign.Right">
                @context.Title
              </MudText>
            </MudHidden>
            <MudHidden Breakpoint="Breakpoint.SmAndUp">
              <MudText Type="Typo.body2" Align="MudAlign.Left">
                @context.Title
              </MudText>
            </MudHidden>
          </MudItem>
        </MudGrid>
      </MudPaper>
    </MudContainer>
  </Found>
</Loading>


@code {
  [Parameter] public string Id { get; set; } = default!;
  [Parameter] public NetworkUserModel? Model { get; set; }

}
