@inject NavigationManager NavigationManager
@inject IDialogService DialogService
@inherits OzdsOwningComponentBase

@if (LoadingState.Value is null)
{
  <MudProgressCircular/>
  return;
}

@if (LoadingState.Value is null)
{
  return;
}

<MudText Class="my-2" Typo="Typo.h4">Regulaciski katalog</MudText>
<EditForm
  Model="@LoadingState.Value"
  OnValidSubmit="Submit">
  <DataAnnotationsValidator/>
  <MudCard>
    <MudCardContent>
      <MudTextField
        Label="Naziv"
        @bind-Value="LoadingState.Value.Title"
        For="@(() => LoadingState.Value.Title)"/>
      <MudTextField
        T="decimal"
        Label="Cijena potrošnje aktivne energije u dnevnoj tarifi (EUR/kWh)"
        Value="LoadingState.Value.ActiveEnergyTotalImportT1Price_EUR * 1000"
        ValueChanged="@(e => LoadingState.Value.ActiveEnergyTotalImportT1Price_EUR = e / 1000)"
        For="@(() => LoadingState.Value.ActiveEnergyTotalImportT1Price_EUR)"/>
      <MudTextField
        T="decimal"
        Label="Cijena potrošnje aktivne energije u noćnoj tarifi (EUR/kWh)"
        Value="LoadingState.Value.ActiveEnergyTotalImportT2Price_EUR * 1000"
        ValueChanged="@(e => LoadingState.Value.ActiveEnergyTotalImportT2Price_EUR = e / 1000)"
        For="@(() => LoadingState.Value.ActiveEnergyTotalImportT2Price_EUR)"/>
      <MudTextField
        T="decimal"
        Label="Cijena naknade za obnovljivu energiju (EUR/kWh)"
        Value="LoadingState.Value.RenewableEnergyFeePrice_EUR * 1000"
        ValueChanged="@(e => LoadingState.Value.RenewableEnergyFeePrice_EUR = e / 1000)"
        For="@(() => LoadingState.Value.RenewableEnergyFeePrice_EUR)"/>
      <MudTextField
        T="decimal"
        Label="Cijena naknade za poslovnu upotrebu (EUR/kWh)"
        Value="LoadingState.Value.BusinessUsageFeePrice_EUR * 1000"
        ValueChanged="@(e => LoadingState.Value.BusinessUsageFeePrice_EUR = e / 1000)"
        For="@(() => LoadingState.Value.BusinessUsageFeePrice_EUR)"/>
      <MudTextField
        Label="Porez (Postotak)"
        @bind-Value="LoadingState.Value.TaxRate_Percent"
        For="@(() => LoadingState.Value.TaxRate_Percent)"/>
    </MudCardContent>
    <ValidationSummary/>
    <MudCardActions>
      <MudButton
        ButtonType="ButtonType.Submit"
        Variant="Variant.Filled"
        Color="MudColor.Primary"
        Class="ml-auto">
        @if (_create)
        {
          <span>Create</span>
        }
        else
        {
          <span>Update</span>
        }
      </MudButton>
    </MudCardActions>
  </MudCard>
</EditForm>

@code {
  [Parameter] public string Id { get; set; } = default!;

  [Parameter] public RegulatoryCatalogueModel? Model { get; set; }

  private LoadingState<RegulatoryCatalogueModel> LoadingState { get; set; } = new();

  private bool _create;

  private async Task Submit()
  {
    var mutations = ScopedServices.GetRequiredService<OzdsAuditableMutations>();
    if (LoadingState.Value is null)
      return;
    if (_create)
    {
      mutations.Create(LoadingState.Value);
    }
    else
    {
      mutations.Update(LoadingState.Value);
    }
    await mutations.SaveChangesAsync();
    DialogService.Show<MutateSuccess>("Changes Saved", new DialogOptions(){CloseOnEscapeKey = true});
  }

  protected override void OnInitialized()
  {
    if (LoadingState.Value is not null)
    {
      LoadingState = LoadingState.WithValue(LoadingState.Value);
    }
  }

  protected override async Task OnInitializedAsync()
  {
    if (LoadingState.Value is null && Id is not null && long.TryParse(Id, out _))
    {
      LoadingState = LoadingState.WithValue(
        await ScopedServices
          .GetRequiredService<OzdsRegulatoryCatalogueModelQueries>()
          .RegulatoryCatalogueById(Id));
    }

    if (LoadingState.Value is null)
    {
      LoadingState = LoadingState.WithValue(RegulatoryCatalogueModel.New());
      _create = true;
    }
  }

}
