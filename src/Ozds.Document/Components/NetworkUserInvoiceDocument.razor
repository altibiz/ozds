@namespace Ozds.Document.Components
@using Ozds.Document.Entities
@inherits DocumentBase

<div class="page">
  <div class="page-header">
    <img src="/invoice-print-header-hrv.svg"/>
  </div>
  <div class="page-content">
    <NetworkUserInvoiceDocumentContent Entity="@Entity.Invoice"/>
  </div>
  <div class="page-footer">
    <img src="/invoice-print-footer-hrv.svg"/>
  </div>
</div>

@foreach (var calculation in Entity.Calculations)
{
  <div class="page-break"/>
  <div class="page">
    <div class="page-header">
      <img src="/invoice-print-header-hrv.svg"/>
    </div>
    <div class="page-content">
      <NetworkUserCalculationDocumentContent Entity="@calculation"/>
    </div>
    <div class="page-footer">
      <img src="/invoice-print-footer-hrv.svg"/>
    </div>
  </div>
}

@if (Entity.Calculations.Count > 0)
{
  <div class="page-break"/>
  <div class="page">
    <div class="page-header">
      <img src="/invoice-print-header-hrv.svg"/>
    </div>
    <div class="page-content">
      <NetworkUserCalculationDocumentAbbreviations/>
    </div>
    <div class="page-footer">
      <img src="/invoice-print-footer-hrv.svg"/>
    </div>
  </div>
}

<div class="page-break"/>
<div class="page">
  <div class="page-header">
    <img src="/invoice-print-header-hrv.svg"/>
  </div>
  <div class="page-content">
    <NetworkUserCalculationDocumentFooter/>
    <NetworkUserInvoiceDocumentFooter Entity="@Entity.Invoice"/>
  </div>
  <div class="page-footer">
    <img src="/invoice-print-footer-hrv.svg"/>
  </div>
</div>

@code {

  [Parameter]
  public CalculatedNetworkUserInvoiceEntity Entity { get; set; } = default!;

}
